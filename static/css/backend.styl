    margin: 0
    padding: 0

body
    background-color: #DCDBD4

#editor, #preview
    width: 48%
    p
        line-height:2em

#editor textarea
    width: 100%
    min-height: 500px
    padding: 1em
    background-color: #F6F4EC

.right
    float: right
.left
    float: left
